@using Employee.Entity;
@model EmployeeCreateViewModel

<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">All Employees</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create Employee</li>
            </ol>
        </nav>
    </div>

    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-2">
                <label class="form-label" asp-for="@Model.EmployeeNo"></label>
            </div>
            <div class="form-group col-3">
                <input class="form-control" asp-for="@Model.EmployeeNo" />
                <span asp-validation-for="@Model.EmployeeNo" class="text-danger"></span>
            </div>
            <div class="col-md-2"></div>
            <div class="form-group col-md-2">
                <label asp-for="DateJoined"></label>
            </div>
            <div class="form-group col-md-3">
                <input asp-for="DateJoined" class="form-control" />
                <span asp-validation-for="DateJoined" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-2">
                <label class="form-label" asp-for="@Model.FirstName"></label>
            </div>
            <div class="form-group col-3">
                <input class="form-control" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <input class="form-control" asp-for="@Model.MiddleName" placeholder="Middle Name" />
                <span asp-validation-for="@Model.MiddleName"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="LastName" class="form-label"></label>
            </div>
            <div class="form-group col-md-3">
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-2">
                <label class="form-label" asp-for="@Model.Gender"></label>
            </div>
            <div class="form-group col-3">
                <select class="form-select" asp-for="@Model.Gender">
                    <option selected>Choose Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="col-md-2">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="@Model.DOB" class="form-label"></label>
            </div>
            <div class="form-group col-md-3">
                <input asp-for="@Model.DOB" class="form-control" />
                <span asp-validation-for="@Model.DOB" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-2">
                <label class="form-label" asp-for="@Model.NationalInsuranceNo"></label>
            </div>
            <div class="form-group col-3">
                <input class="form-control" asp-for="@Model.NationalInsuranceNo" />
                <span asp-validation-for="@Model.NationalInsuranceNo" class="text-danger"></span>
            </div>
            <div class="col-md-2">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="@Model.Email" class="form-label"></label>
            </div>
            <div class="form-group col-md-3">
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-2">
                <label class="form-label" asp-for="@Model.Phone"></label>
            </div>
            <div class="form-group col-3">
                <input class="form-control" asp-for="@Model.Phone" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="col-md-2">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="@Model.PaymentMethod" class="form-label"></label>
            </div>
            <div class="form-group col-md-3">
                <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-2">
                <label class="form-label" asp-for="@Model.StudentLoan"></label>
            </div>
            <div class="form-group col-3">
                <select asp-for="@Model.StudentLoan" class="form-control" asp-items="Html.GetEnumSelectList<StudentLoan>()"></select>
                <span asp-validation-for="@Model.StudentLoan" class="text-danger"></span>
            </div>
            <div class="col-md-2">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="@Model.UnionMember" class="form-label"></label>
            </div>
            <div class="form-group col-md-3">
                <select asp-for="@Model.UnionMember" class="form-control" asp-items="Html.GetEnumSelectList<UnionMember>()"></select>
                <span asp-validation-for="@Model.UnionMember" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="@Model.Designation"></label>
            </div>
            <div class="form-group col-md-3">
                <input asp-for="@Model.Designation" class="form-control" placeholder="Enter Role..." />
                <span asp-validation-for="@Model.Designation" class="text-danger"></span>
            </div>
            <div class="col-md-2"></div>
            <div class="form-group col-md-1">
                <label asp-for="@Model.ImageUrl"></label>
            </div>
            <div class="form-group col-md-4">
                <div class="btn btn-primary btn-icon-text">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <input asp-for="@Model.ImageUrl" type="file" value="Upload" />
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Address"></label>
            <input asp-for="@Model.Address" class="form-control" placeholder="Enter Address.." />
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.City"></label>
            <input asp-for="@Model.City" class="form-control" placeholder="Enter City/Town.." />
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Postcode"></label>
            <input asp-for="@Model.Postcode" class="form-control" placeholder="Enter Postcode.." />
            <span asp-validation-for="@Model.Postcode" class="text-danger"></span>
        </div><br /><br />

        <div class="form-group">

            <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save
                </button>
            <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
            <br />
            <br />
            <br />

        </div>
    </form>

</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
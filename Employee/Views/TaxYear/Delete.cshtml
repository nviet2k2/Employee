@model TaxYearDeleteViewModel

<div class="card">
    <div class="card-body">
        <input asp-for="@Model.Id" readonly>
        <input asp-for="@Model.YearOfTax" readonly>
        <form method="post" asp-action="Delete" asp-asp-controller="Employee">
            <button type="submit" class="btn btn-danger">Yes</button>
            <a asp-action="Index" class="btn btn-info">No</a>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}